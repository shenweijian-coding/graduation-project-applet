.pad{
  padding: 30rpx 30rpx 20rpx 30rpx;

}
.flex{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.avator{
  width: 80rpx;
  border-radius: 50%;
  border: 1px solid #f7f7f7f7;
  margin-right: 20rpx;
}
.flex3{
  display: flex;
  align-items: center;
}
.time{
  color: #585858f7;
  font-size: 24rpx;
}
.gender-1{

  color: pink;
}
.gender-0{
  color: #3dbeff;
}
.price{
  color: red;
}
.tag{
  background-color: #ffe1e1;
  line-height: 42rpx;
  text-align: center;
  font-size: 26rpx;
  color: #b00041;
  border-radius: 10rpx;
}
.info{
  margin: 20rpx 0;
  font-size: 28rpx;
}
.img image{
  width: 49%;
  border-radius: 10rpx;
}
.line{
  padding: 10rpx 0;
  border-bottom: 6rpx solid #f5f5f5;
}
.comment-line{
  border-bottom: 1rpx solid #f5f5f5;
}
.comment{
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  background-color: #fff;
  height: 100rpx;
  border-top: 1px solid #f7f7f7f7;
}
.iconfont{
  font-size: 24rpx;
  margin-left: 20rpx;
}