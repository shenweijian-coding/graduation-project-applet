.bg{
  width: 100%;
  min-height: 100vh;
  background-color: #000;
  padding: 20rpx 0;
}
.back{
  color: #fff;
  font-size: 38rpx;
  position: fixed;
  z-index: 10;
  top: 7%;
  left: 6%;
}
.top-img{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  animation-iteration-count: infinite;
}
.top-img image{
  /* margin-top: 20%; */
  width: 76%;
}
.item{
  width: 86%;
  padding: 86rpx 30rpx;
  background-color: #fff;
  margin: 10rpx auto;
  border-radius: 6px;
  position: relative;
}
.flex{
  display: flex;
  align-items: center;
}
.flex2{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.love-type{
  font-size: 26rpx;
  color: #9e9e9e;
  margin-left: 30rpx;
}
.user-name{
  color: #44a7f8;
  font-size: 34rpx;
}
.item-con{
  padding: 30rpx 0;
  line-height: 50rpx;
  font-size: 34rpx;
}
.item-img image{
  border-radius: 6px;
  width: 300rpx;
}
.border-img{
  height: 100rpx;
  position: absolute;
  z-index: 2;
  overflow: hidden;
  top: -50rpx;
}
cover-image{
  transform: translateY(10%);
}