<!-- 角色选择 -->
<van-radio-group value="{{ radio }}" bind:change="onChange">
  <van-cell-group>
    <van-cell title="您的角色" clickable data-name="1" bind:click="onClick">
      <van-radio slot="right-icon" name="1">失物</van-radio>
      <van-radio style="margin-left:40rpx" slot="right-icon" name="2">招领</van-radio>
    </van-cell>
  </van-cell-group>
</van-radio-group>
<!-- 发布物品信息 -->
<van-cell title="物品信息"></van-cell>
<view class="pad">
  <textarea name="" id="" cols="30" rows="10" placeholder-style="font-size:26rpx" placeholder="请输入您的物品信息"></textarea>
</view>
<!-- 物品相关照片 -->
<van-cell title="物品相关照片"></van-cell>
<view class="pad">
  <van-uploader file-list="{{ fileList }}" />
</view>
<!-- 联系人 -->
<van-field
  value="{{ username }}"
  clearable
  label="手机号"
  placeholder="请输入手机号"
/>
<!-- 微信号 -->
<van-field
  value="{{ username }}"
  required
  clearable
  label="微信号"
  placeholder="请输入微信号"
/>
<button class="issue-btn">立即发布</button>
