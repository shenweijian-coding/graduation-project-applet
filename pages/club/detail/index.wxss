.swiper-container {
  width: 750rpx;
  height: 500rpx;
  position: relative;
  z-index: 1;
}
.swiper-container .swiper1 {
  width: 750rpx;
  height: 500rpx;
}
.swiper-container  image {
  width: 750rpx;
  height: 500rpx;
}
.club-box{
  margin-top: -40rpx;
  width: 100%;
  height: 100vh;
  z-index: 2;
  position: relative;
  border-radius: 24px 24px 0 0;
  background-color: #fff;
}
.pad{
  padding: 40rpx 30rpx;
}
.club-con{
  padding: 40rpx 30rpx;
}
.club-name{
  font-weight: 500;
  font-size: 40rpx;
  margin-bottom: 10rpx;
}
.club-mem{
  color: rgb(161, 161, 161);
  font-size: 28rpx;
}
.tag-item{
  margin-top: 20rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  /* width: 100rpx; */
  padding: 0 16rpx;
  border-radius: 20px;
  height: 40rpx;
  color: #7c7c7c;
  line-height: 40rpx;
  text-align: center;
  background-color: #f5f5f5;
}
.flex{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.club-main{
  flex: 4;
}
.club-logo{
  flex: 1;
}
.club-logo image{
  border-radius: 50%;
  width: 180rpx;
  height: 180rpx;
}
.club-desc{
  text-indent:40rpx;
  margin-top: 40rpx;
  line-height: 60rpx;
}
.line{
  width: 100%;
  height: 14rpx;
  background-color: #f5f5f5;
}
.back{
  color: #fff;
  font-size: 38rpx;
  position: fixed;
  z-index: 10;
  top: 7%;
  left: 6%;
}
.club-img image{
  margin-top: 20rpx;
  width: 100%;
  border-radius: 4rpx;
}