@import '../../style/iconfont.wxss';
.item{
  padding: 30rpx 30rpx 20rpx 30rpx;
}
.price{
  color: red;
}
.time{
  color: #585858f7;
  font-size: 24rpx;
}
.info{
  margin: 20rpx 0;
  font-size: 28rpx;
}
.flex{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.flex2{
  display: flex;
  justify-content: space-evenly;
}
.flex3{
  display: flex;
  align-items: center;
  /* justify-content: space-evenly; */
}
.img image{
  width: 49%;
  /* height: 40%; */
  border-radius: 10rpx;
}
.line{
  width: 100%;
  margin: 20rpx 0;
  background-color: #f7f7f7f7;
  /* background-color: red; */
  height: 1px;
}
.avator{
  width: 80rpx;
  border-radius: 50%;
  border: 1px solid #f7f7f7f7;
  margin-right: 20rpx;
}
.item-bottom{
  border-bottom: 6rpx solid #f5f5f5;
}
.bottom-con{
  font-size: 28rpx;
  color: #6b6b6bf7;
  margin-left: 4rpx;
}
.iconfont{
  font-size: 24rpx;
  margin-left: 20rpx;

}
.gender-1{

  color: pink;
}
.gender-0{
  color: #3dbeff;
}
.tag{
  background-color: #ffe1e1;
  line-height: 42rpx;
  text-align: center;
  font-size: 26rpx;
  color: #b00041;
  border-radius: 10rpx;
}